<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Connection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scan_devices"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/connect"
                android:enabled="false" />
        </LinearLayout>

        <!-- Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/tvRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/roll_label"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pitch_label"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/battery_label"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Control Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStabilizationToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stabilization_off"
                android:backgroundTint="@android:color/holo_red_dark"
                android:enabled="false"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEmergencyStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/emergency_stop"
                android:backgroundTint="@android:color/holo_red_dark"
                android:enabled="false" />
        </LinearLayout>

        <!-- PID Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pid_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Kp Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kp_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sbKp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="20"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/tvKpValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.0"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Ki Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ki_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sbKi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="1"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/tvKiValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.1"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Kd Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kd_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sbKd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="5"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/tvKdValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.5"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Device List (shown when scanning) -->
        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>